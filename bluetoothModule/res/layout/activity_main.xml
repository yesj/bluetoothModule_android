<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bluetoothmodule.MainActivity"
    tools:ignore="MergeRootFrame" >
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        
	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >

	        <Button
	            android:id="@+id/btn_select"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="12sp"
	            android:onClick="onSelectClicked"
	            android:text="@string/btn_select_string" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/linearLayout5"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/display_state_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/unit_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/speed_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/incline_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/sport_time_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/sport_distance_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
	        <TextView
	            android:id="@+id/sport_calories_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
	        
			<TextView
	            android:id="@+id/heart_rate_views"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"/>
			
	    </LinearLayout>
	    
	    
	</LinearLayout> 
	    
</FrameLayout>
    

	    

